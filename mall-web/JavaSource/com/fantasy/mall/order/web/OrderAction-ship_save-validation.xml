<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="shipName">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>收货人不能为空!</message>
		</field-validator>
	</field>
	<field name="shipAddress">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>详细地址不能为空!</message>
		</field-validator>
	</field>
	<field name="shipZipCode">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>邮编不能为空!</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">\d{6}</param>
			<message>输入的邮编有误!</message>
		</field-validator>
	</field>
	<field name="shipMobile">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>手机不能为空!</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">(13|14|15|18)[0-9]{9}</param>
			<message>输入的手机号码有误!</message>
		</field-validator>
	</field>
</validators>