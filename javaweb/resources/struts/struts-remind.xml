<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>


    <!-- 订单管理 -->
    <package name="admin-notice" extends="fantasy-default" namespace="/admin/notice">

        <!-- 首页 -->
        <action name="index" class="com.fantasy.remind.web.NoticeAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/remind/notice.ftl</result>
        </action>

        <!-- search -->
        <action name="search" class="com.fantasy.remind.web.NoticeAction" method="search" />

        <!-- add -->
        <action name="add" class="com.fantasy.framework.struts2.ActionSupport">
            <result type="freemarker">/template/%{pageTheme}/remind/notice_add.ftl</result>
        </action>
        <!-- save -->
        <action name="save" class="com.fantasy.remind.web.NoticeAction" method="save" />

        <!-- 修改 -->
        <action name="edit" class="com.fantasy.remind.web.NoticeAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/remind/notice_edit.ftl</result>
        </action>

        <!-- 查看 -->
        <action name="view" class="com.fantasy.remind.web.NoticeAction" method="view">
            <result type="freemarker">/template/%{pageTheme}/remind/notice_view.ftl</result>
        </action>

        <action name="del" class="com.fantasy.remind.web.NoticeAction" method="delete" />

    </package>
</struts>