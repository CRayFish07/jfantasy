<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>


    <package name="test" extends="fantasy-default" namespace="/test">
        <action name="testSave" class="com.test.AttributeAction" method="save">
            <result>/attribute.jsp</result>
        </action>
    </package>

    <!-- 订单管理 -->
    <package name="fides-order" extends="fantasy-default" namespace="/order">
        <action name="index" class="com.fantasy.mall.order.web.OrderAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/order/order.ftl</result>
        </action>

        <action name="search" class="com.fantasy.mall.order.web.OrderAction" method="search"/>

        <action name="edit" class="com.fantasy.mall.order.web.OrderAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/order/order_edit.ftl</result>
        </action>

        <action name="add" class="com.fantasy.framework.struts2.ActionSupport">
            <result type="freemarker">/template/%{pageTheme}/order/order_add.ftl</result>
        </action>

        <action name="view" class="com.fantasy.mall.order.web.OrderAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/order/order_view.ftl</result>
        </action>

        <action name="save" class="com.fantasy.mall.order.web.OrderAction" method="save"/>

        <action name="delete" class="com.fantasy.mall.order.web.OrderAction" method="delete"/>
    </package>

    <!-- 网站维护 -->
    <package name="fides-system-website" extends="fantasy-default" namespace="/system/website">
        <action name="index" class="com.fantasy.system.web.WebsiteAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/website.ftl</result>
        </action>
        <action name="search" class="com.fantasy.system.web.WebsiteAction" method="search"/>

        <action name="save" class="com.fantasy.system.web.WebsiteAction" method="save"/>

        <action name="delete" class="com.fantasy.system.web.WebsiteAction" method="delete"/>

        <!-- setting设置 -->
        <action name="setting_index" class="com.fantasy.system.web.SettingAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/setting.ftl</result>
        </action>
        <action name="setting_search" class="com.fantasy.system.web.SettingAction" method="search"/>
        <action name="setting_add" class="com.fantasy.system.web.SettingAction" method="exitSetting">
            <result type="freemarker">/template/%{pageTheme}/system/setting_add.ftl</result>
        </action>
        <action name="setting_save" class="com.fantasy.system.web.SettingAction" method="save"/>
        <action name="setting_edit" class="com.fantasy.system.web.SettingAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/system/setting_edit.ftl</result>
        </action>
        <action name="setting_delete" class="com.fantasy.system.web.SettingAction" method="delete"/>
    </package>

    <!--访问统计 -->
    <package name="fides-access-log" extends="fantasy-default" namespace="/system/access">
        <action name="index1" class="com.fantasy.system.web.WebAccessLogAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/web_access_log.ftl</result>
        </action>
        <action name="search" class="com.fantasy.system.web.WebAccessLogAction" method="search"/>

        <action name="delete" class="com.fantasy.system.web.WebAccessLogAction" method="delete"/>

        <action name="index" class="com.fantasy.system.web.WebAccessLogAction" method="access">
            <result type="freemarker">/template/%{pageTheme}/system/web_access_log_chart.ftl</result>
        </action>
    </package>

    <!-- 支付记录-->
    <package name="fides-paymentInfo" extends="fantasy-default" namespace="/system/paymentInfo">
        <action name="index" class="com.fantasy.payment.web.PaymentAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/paymentInfo.ftl</result>
        </action>

        <action name="search" class="com.fantasy.payment.web.PaymentAction" method="search"/>

        <action name="view" class="com.fantasy.payment.web.PaymentAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/system/paymentInfo_view.ftl</result>
        </action>

        <action name="delete" class="com.fantasy.payment.web.PaymentAction" method="delete"/>
    </package>
</struts>