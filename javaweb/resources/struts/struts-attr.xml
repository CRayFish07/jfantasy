<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>


    <!-- attr 属性管理 -->
    <package name="attr-manager" extends="fantasy-default" namespace="/attr">
        <!-- 属性管理 -->

        <!-- 首页 -->
        <action name="index" class="com.fantasy.attr.web.AttributeAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/attr/attr.ftl</result>
        </action>

        <!-- search -->
        <action name="search" class="com.fantasy.attr.web.AttributeAction" method="search"/>

        <!-- edit -->
        <action name="edit" class="com.fantasy.attr.web.AttributeAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/attr/attr_edit.ftl</result>
        </action>

        <!-- add -->
        <action name="add" class="com.fantasy.framework.struts2.ActionSupport">
            <result type="freemarker">/template/%{pageTheme}/attr/attr_add.ftl</result>
        </action>

        <!-- view -->
        <action name="view" class="com.fantasy.attr.web.AttributeAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/attr/attr_view.ftl</result>
        </action>

        <!-- save -->
        <action name="save" class="com.fantasy.attr.web.AttributeAction" method="save"/>

        <!-- delete -->
        <action name="delete" class="com.fantasy.attr.web.AttributeAction" method="delete"/>



        <!-- 属性类型管理 -->

        <!-- 首页 -->
        <action name="type_index" class="com.fantasy.attr.web.AttributeTypeAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/attr/attrType.ftl</result>
        </action>

        <!-- search -->
        <action name="type_search" class="com.fantasy.attr.web.AttributeTypeAction" method="search"/>

        <!-- edit -->
        <action name="type_edit" class="com.fantasy.attr.web.AttributeTypeAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/attr/attrType_edit.ftl</result>
        </action>

        <!-- add -->
        <action name="type_add" class="com.fantasy.framework.struts2.ActionSupport">
            <result type="freemarker">/template/%{pageTheme}/attr/attrType_add.ftl</result>
        </action>

        <!-- view -->
        <action name="type_view" class="com.fantasy.attr.web.AttributeTypeAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/attr/attrType_view.ftl</result>
        </action>

        <!-- save -->
        <action name="type_save" class="com.fantasy.attr.web.AttributeTypeAction" method="save"/>

        <!-- delete -->
        <action name="type_delete" class="com.fantasy.attr.web.AttributeTypeAction" method="delete"/>

        <!-- 属性转换器 -->
        <action name="converter" class="com.fantasy.attr.web.ConverterAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/attr/converter.ftl</result>
        </action>
        <action name="converter_search" class="com.fantasy.attr.web.ConverterAction" method="search"/>
        <action name="converter_add" class="com.fantasy.attr.web.ConverterAction">
            <result type="freemarker">/template/%{pageTheme}/attr/converter_add.ftl</result>
        </action>
        <action name="converter_save" class="com.fantasy.attr.web.ConverterAction" method="save"/>
        <action name="converter_delete" class="com.fantasy.attr.web.ConverterAction" method="delete"/>
        <action name="converter_view" class="com.fantasy.attr.web.ConverterAction" method="view">
            <result type="freemarker">/template/%{pageTheme}/attr/converter_view.ftl</result>
        </action>
        <action name="converter_edit" class="com.fantasy.attr.web.ConverterAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/attr/converter_edit.ftl</result>
        </action>

        <!-- 属性版本管理 -->

        <!-- 首页 -->
        <action name="version_index" class="com.fantasy.attr.web.AttributeVersionAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/attr/attrVersion.ftl</result>
        </action>

        <!-- search -->
        <action name="version_search" class="com.fantasy.attr.web.AttributeVersionAction" method="search"/>

        <!-- edit -->
        <action name="version_edit" class="com.fantasy.attr.web.AttributeVersionAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/attr/attrVersion_edit.ftl</result>
        </action>

        <!-- add -->
        <action name="version_add" class="com.fantasy.framework.struts2.ActionSupport">
            <result type="freemarker">/template/%{pageTheme}/attr/attrVersion_add.ftl</result>
        </action>

        <!-- view -->
        <action name="version_view" class="com.fantasy.attr.web.AttributeVersionAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/attr/attrVersion_view.ftl</result>
        </action>

        <!-- save -->
        <action name="version_save" class="com.fantasy.attr.web.AttributeVersionAction" method="save"/>

        <!-- delete -->
        <action name="version_delete" class="com.fantasy.attr.web.AttributeVersionAction" method="delete"/>

        <!-- 版本属性 -->
        <action name="version_attr" class="com.fantasy.attr.web.AttributeVersionAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/attr/version_attr.ftl</result>
        </action>

        <!-- 版本添加非临时属性页面 -->
        <action name="version_attrAdd" class="com.fantasy.attr.web.AttributeAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/attr/version_attr_add.ftl</result>
        </action>

        <!-- 版本保存非临时属性-->
        <action name="version_attrSave" class="com.fantasy.attr.web.AttributeVersionAction" method="attrSave" />

        <!-- 版本移除非临时属性-->
        <action name="version_attrDel" class="com.fantasy.attr.web.AttributeVersionAction" method="attrDel" />

        <!-- 版本属性上调下调-->
        <action name="version_upOrDown" class="com.fantasy.attr.web.AttributeVersionAction" method="attrUpOrDown" />


    </package>


</struts>