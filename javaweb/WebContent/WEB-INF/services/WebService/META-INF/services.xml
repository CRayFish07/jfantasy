<serviceGroup>

    <service name="MemberService">
        <description>Member登陆接口</description>

        <parameter name="ServiceClass">com.fantasy.member.ws.IMemberService</parameter>
        <parameter name="ServiceObjectSupplier">org.apache.axis2.extensions.spring.receivers.SpringServletContextObjectSupplier</parameter>
        <parameter name="SpringBeanName">memberWebService</parameter>

        <module ref="rampart"/>
        <parameter name="InflowSecurity">
            <action>
                <items>Timestamp Signature</items>
                <signaturePropFile>service.properties</signaturePropFile>
            </action>
        </parameter>
        <parameter name="OutflowSecurity">
            <action>
                <items>Timestamp Signature</items>
                <user>service</user>
                <passwordCallbackClass>com.fantasy.framework.ws.axis2.security.RampartPasswordCB</passwordCallbackClass>
                <signaturePropFile>service.properties</signaturePropFile>
                <signatureKeyIdentifier>DirectReference</signatureKeyIdentifier>
            </action>
        </parameter>

        <operation name="login">
            <messageReceiver class="org.apache.axis2.rpc.receivers.RPCMessageReceiver"/>
        </operation>
        <operation name="register">
            <messageReceiver class="org.apache.axis2.rpc.receivers.RPCMessageReceiver"/>
        </operation>
        <operation name="findUniqueByUsername">
            <messageReceiver class="org.apache.axis2.rpc.receivers.RPCMessageReceiver"/>
        </operation>
        <operation name="update">
            <messageReceiver class="org.apache.axis2.rpc.receivers.RPCMessageReceiver"/>
        </operation>

    </service>

</serviceGroup>