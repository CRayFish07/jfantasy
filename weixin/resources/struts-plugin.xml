<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <package name="weixin-authorization" extends="fantasy-default" namespace="/weixin/authorization">
        <action name="users" class="com.fantasy.wx.web.UserAction">
            <result type="json"/>
        </action>
    </package>

    <package name="weixin-userinfo" extends="fantasy-default" namespace="/weixin">
        <!-- 拍品 -->
        <action name="userinfo" class="com.fantasy.wx.web.UserInfoAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/weixin/userinfo.ftl</result>
        </action>
        <action name="user_search" class="com.fantasy.wx.web.UserInfoAction" method="search"/>
        <action name="refresh" class="com.fantasy.wx.web.UserInfoAction" method="refresh"/>
    </package>
    <package name="weixin-token" extends="fantasy-default" namespace="/weixin/token">
        <action name="add" class="com.fantasy.framework.struts2.ActionSupport">
            <result type="freemarker">/template/%{pageTheme}/weixin/token_add.ftl</result>
        </action>
        <action name="edit" class="com.fantasy.wx.web.AccessTokenAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/weixin/token_edit.ftl</result>
        </action>
        <action name="view" class="com.fantasy.wx.web.AccessTokenAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/weixin/token_view.ftl</result>
        </action>
        <action name="index" class="com.fantasy.wx.web.AccessTokenAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/weixin/token.ftl</result>
        </action>
        <action name="search" class="com.fantasy.wx.web.AccessTokenAction" method="search"/>
        <action name="save" class="com.fantasy.wx.web.AccessTokenAction" method="save"/>
        <action name="delete" class="com.fantasy.wx.web.AccessTokenAction" method="delete"/>
    </package>
    <package name="weixin-message" extends="fantasy-default" namespace="/weixin/message">
        <action name="index" class="com.fantasy.wx.web.MessageAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/weixin/message.ftl</result>
        </action>
        <action name="searchUserInfo" class="com.fantasy.wx.web.MessageAction" method="searchUserInfo"/>

        <action name="search" class="com.fantasy.wx.web.MessageAction" method="search"/>
        <action name="send" class="com.fantasy.wx.web.MessageAction" method="sendMessage"/>
    </package>
    <package name="weixin-client" extends="fantasy-default" namespace="/weixin/client">
        <action name="core" class="com.fantasy.wx.web.WeixinAction" method="operationUrl"/>
    </package>
</struts>