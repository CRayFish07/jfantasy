<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>


    <!--********************************************************************** -->
    <!--* * -->
    <!--* 商品管理 * -->
    <!--* * -->
    <!--********************************************************************** -->
    <package name="admin-mall" extends="fantasy-default" namespace="/mall">
        <action name="goods" class="com.fantasy.mall.goods.web.OldGoodsAction" method="goods">
            <result type="freemarker">/template/%{pageTheme}/mall/goods/goods.ftl</result>
        </action>
        <action name="payconfig">
            <result type="chain">
                <param name="namespace">/admin/mall/payconfig</param>
                <param name="actionName">index</param>
            </result>
        </action>
    </package>

    <package name="rest-goods" extends="fantasy-default" namespace="/mall/goods">

        <action name="categorys" class="com.fantasy.mall.goods.web.GoodsCategoryAction">
            <result type="json"/>
        </action>

        <action name="goodses" class="com.fantasy.mall.goods.web.GoodsAction">
            <result type="json"/>
        </action>

    </package>

    <include file="struts-mall-goods.xml"/>

    <package name="admin-mall-stock" extends="fantasy-default" namespace="/mall/stock">
        <!-- 商品对应的产品信息 -->
        <action name="stock_product_index" class="com.fantasy.mall.stock.web.StockAction" method="productIndex">
            <result>/WEB-INF/views/admin/mall/stock/stock_product_index.jsp</result>
        </action>
        <!-- 产品查询 -->
        <action name="stock_product_search" class="com.fantasy.mall.stock.web.StockAction" method="productSearch"/>
        <!-- 库存查询首页 -->
        <action name="stock_index" class="com.fantasy.mall.stock.web.StockAction" method="index">
            <result>/WEB-INF/views/admin/mall/stock/stock_index.jsp</result>
        </action>
        <!-- 库存查询列表 -->
        <action name="stock_search" class="com.fantasy.mall.stock.web.StockAction" method="search"/>
        <!-- 产品库存添加 -->
        <action name="stock_change" class="com.fantasy.mall.stock.web.StockAction" method="change">
            <result>/WEB-INF/views/admin/mall/stock/stock_change.jsp</result>
        </action>
        <!-- 产品库存保存 -->
        <action name="stock_save" class="com.fantasy.mall.stock.web.StockAction" method="save"/>
        <!-- 库存预警添加或修改页面 -->
        <action name="stock_warn_add">
            <result>/WEB-INF/views/admin/mall/stock/stock_warn_add.jsp</result>
        </action>
        <!-- 库存预警保存页面 -->
        <action name="stock_warn_save" class="com.fantasy.mall.stock.web.StockAction" method="warnSave"/>
    </package>
    <!-- 订单管理 -->
    <package name="admin-mall-order" extends="fantasy-default" namespace="/mall/order">
        <!-- 订单地址修改 -->
        <action name="ship_edit" class="com.fantasy.mall.order.web.OrderAction" method="shipedit">
            <result>/WEB-INF/views/admin/mall/order/order_ship_edit.jsp</result>
        </action>
        <!-- 订单地址保存 -->
        <action name="ship_save" class="com.fantasy.mall.order.web.OrderAction" method="save"/>
        <!-- 待付款订单首页 -->
        <action name="still_index" class="com.fantasy.mall.order.web.OrderAction" method="index">
            <result>/WEB-INF/views/admin/mall/order/order_still_index.jsp</result>
        </action>
        <!-- 新订单首页 -->
        <action name="new_index" class="com.fantasy.mall.order.web.OrderAction" method="index">
            <result>/WEB-INF/views/admin/mall/order/order_new_index.jsp</result>
        </action>
        <!-- 待发货首页 -->
        <action name="still_product_index" class="com.fantasy.mall.order.web.OrderAction" method="index">
            <result>/WEB-INF/views/admin/mall/order/order_still_product_index.jsp</result>
        </action>
        <!-- 所有订单查询 -->
        <action name="all_index" class="com.fantasy.mall.order.web.OrderAction" method="index">
            <result>/WEB-INF/views/admin/mall/order/order_all_index.jsp</result>
        </action>
        <!-- 订单查询 -->
        <action name="search" class="com.fantasy.mall.order.web.OrderAction" method="search"/>
        <!-- 订单编辑 -->
        <action name="edit" class="com.fantasy.mall.order.web.OrderAction" method="edit">
            <result>/WEB-INF/views/admin/mall/order/order_edit.jsp</result>
        </action>
        <!-- 订单查看 -->
        <action name="view" class="com.fantasy.mall.order.web.OrderAction" method="view">
            <result>/WEB-INF/views/admin/mall/order/order_view.jsp</result>
        </action>
        <!-- 待发货订单状态 -->
        <action name="processed" class="com.fantasy.mall.order.web.OrderAction" method="processed"/>
        <!-- 订单作废 -->
        <action name="invalid" class="com.fantasy.mall.order.web.OrderAction" method="invalid"/>
        <!-- 进入发货 填写物流单号 -->
        <action name="off_add" class="com.fantasy.mall.order.web.OrderAction" method="view">
            <result>/WEB-INF/views/admin/mall/order/order_off_add.jsp</result>
        </action>
    </package>
    <!-- 订单配送管理 -->
    <package name="admin-mall-order-delivery" extends="fantasy-default" namespace="/mall/order/delivery">
        <!-- 发货保存 -->
        <action name="shipping" class="com.fantasy.mall.delivery.web.DeliveryAction" method="shipping">
            <result>/WEB-INF/views/admin/mall/order/order_off_add.jsp</result>
        </action>
        <!-- 获取发货商品详情 -->
        <action name="view" class="com.fantasy.mall.delivery.web.DeliveryAction" method="view">
            <result>/WEB-INF/views/admin/mall/order/delivery_ship_view.jsp</result>
        </action>
        <!-- 获取发货商品列表 <action name="index" class="com.fantasy.mall.delivery.web.DeliveryAction" method="index"> <result>/WEB-INF/views/admin/mall/order/delivery_item_index.jsp</result> </action> -->
        <!-- 查看发货详细 -->
        <action name="view" class="com.fantasy.mall.delivery.web.DeliveryAction" method="view">
            <result>/WEB-INF/views/admin/mall/order/delivery_ship_view.jsp</result>
        </action>
    </package>

    <package name="mall-system" extends="fantasy-default" namespace="/system">
        <!-- 物流公司管理 -->
        <action name="deliverycorp">
            <result type="chain">
                <param name="namespace">/system/deliverycorp</param>
                <param name="actionName">index</param>
            </result>
        </action>
        <!-- 物流配送方式管理 -->
        <action name="deliverytype">
            <result type="chain">
                <param name="namespace">/system/deliverytype</param>
                <param name="actionName">index</param>
            </result>
        </action>

        <!-- 发货记录 -->
        <action name="shipping">
            <result type="chain">
                <param name="namespace">/system/shipping</param>
                <param name="actionName">index</param>
            </result>
        </action>

        <!-- 退货记录 -->
        <action name="reship">
            <result type="chain">
                <param name="namespace">/system/reship</param>
                <param name="actionName">index</param>
            </result>
        </action>
    </package>

    <!-- 物流公司 -->
    <package name="fides-deliverycorp" extends="fantasy-default" namespace="/system/deliverycorp">

        <action name="index" class="com.fantasy.mall.delivery.web.DeliveryCorpAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/delivery/delivery_corp.ftl</result>
        </action>

        <action name="search" class="com.fantasy.mall.delivery.web.DeliveryCorpAction" method="search"/>

        <action name="add" class="com.fantasy.mall.delivery.web.DeliveryCorpAction">
            <result type="freemarker">/template/%{pageTheme}/delivery/delivery_corp_add.ftl</result>
        </action>
        <action name="edit" class="com.fantasy.mall.delivery.web.DeliveryCorpAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/delivery/delivery_corp_edit.ftl</result>
        </action>

        <action name="save" class="com.fantasy.mall.delivery.web.DeliveryCorpAction" method="save"/>

        <action name="delete" class="com.fantasy.mall.delivery.web.DeliveryCorpAction" method="delete"/>
    </package>

    <!--物流配送方式 -->
    <package name="fides-deliverytype" extends="fantasy-default" namespace="/system/deliverytype">

        <!-- 配送方式首页 -->
        <action name="index" class="com.fantasy.mall.delivery.web.DeliveryTypeAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/mall/delivery/delivery_type.ftl</result>
        </action>

        <!-- 配送查询 -->
        <action name="search" class="com.fantasy.mall.delivery.web.DeliveryTypeAction" method="search"/>

        <!--配送添加 -->
        <action name="add" class="com.fantasy.mall.delivery.web.DeliveryTypeAction">
            <result type="freemarker">/template/%{pageTheme}/mall/delivery/delivery_type_add.ftl</result>
        </action>

        <!-- 配送保存 -->
        <action name="save" class="com.fantasy.mall.delivery.web.DeliveryTypeAction" method="save"/>

        <!-- 配送编辑 -->
        <action name="edit" class="com.fantasy.mall.delivery.web.DeliveryTypeAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/mall/delivery/delivery_type_edit.ftl</result>
        </action>

        <!-- 配送查看 -->
        <action name="view" class="com.fantasy.mall.delivery.web.DeliveryTypeAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/mall/delivery/delivery_type_view.ftl</result>
        </action>

        <!-- 配送删除 -->
        <action name="delete" class="com.fantasy.mall.delivery.web.DeliveryTypeAction" method="delete"/>

    </package>

    <!--发货记录 -->
    <package name="fide-shipping" extends="fantasy-default" namespace="/system/shipping">
        <action name="index" class="com.fantasy.mall.delivery.web.ShippingAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/mall/delivery/shipping.ftl</result>
        </action>

        <action name="search" class="com.fantasy.mall.delivery.web.ShippingAction" method="search"/>

        <action name="view" class="com.fantasy.mall.delivery.web.ShippingAction" method="view">
            <result type="freemarker">/template/%{pageTheme}/mall/delivery/shipping_view.ftl</result>
        </action>

        <action name="delete" class="com.fantasy.mall.delivery.web.ShippingAction" method="delete"/>

    </package>

    <!--退货记录 -->
    <package name="fide-reship" extends="fantasy-default" namespace="/system/reship">
        <action name="index" class="com.fantasy.mall.delivery.web.ReshipAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/mall/delivery/reship.ftl</result>
        </action>

        <action name="search" class="com.fantasy.mall.delivery.web.ReshipAction" method="search"/>

        <action name="view" class="com.fantasy.mall.delivery.web.ReshipAction" method="view">
            <result type="freemarker">/template/%{pageTheme}/mall/delivery/reship_view.ftl</result>
        </action>

        <action name="delete" class="com.fantasy.mall.delivery.web.ReshipAction" method="delete"/>

    </package>
</struts>