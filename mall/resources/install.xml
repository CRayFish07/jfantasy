<fantasy>

	<hibernate>
		<sessionFactory>
			<packagesToScan>
				<list>
					<value>org.jfantasy.mall.*.bean</value>
				</list>
			</packagesToScan>
		</sessionFactory>
	</hibernate>

	<mybatis>
		<sqlSessionFactoryBean>
			<plugins>
			
			</plugins>
			<typeAliasesPackage>org.jfantasy.framework;org.jfantasy.website;</typeAliasesPackage>
			<mapperLocations>
				<list>
					<value>classpath:org.jfantasy/framework/**/*-Mapper.xml</value>
					<value>classpath:org.jfantasy/website/**/*-Mapper.xml</value>
				</list>
			</mapperLocations>
		</sqlSessionFactoryBean>
		<mapperScannerConfigurer>
			<basePackage>org.jfantasy.framework;org.jfantasy.website;</basePackage>
		</mapperScannerConfigurer>
	</mybatis>

</fantasy>