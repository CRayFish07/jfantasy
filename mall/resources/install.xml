<fantasy>

	<hibernate>
		<sessionFactory>
			<packagesToScan>
				<list>
					<value>com.fantasy.mall.*.bean</value>
				</list>
			</packagesToScan>
		</sessionFactory>
	</hibernate>

	<mybatis>
		<sqlSessionFactoryBean>
			<plugins>
			
			</plugins>
			<typeAliasesPackage>com.fantasy.framework;com.fantasy.website;</typeAliasesPackage>
			<mapperLocations>
				<list>
					<value>classpath:com/fantasy/framework/**/*-Mapper.xml</value>
					<value>classpath:com/fantasy/website/**/*-Mapper.xml</value>
				</list>
			</mapperLocations>
		</sqlSessionFactoryBean>
		<mapperScannerConfigurer>
			<basePackage>com.fantasy.framework;com.fantasy.website;</basePackage>
		</mapperScannerConfigurer>
	</mybatis>

</fantasy>