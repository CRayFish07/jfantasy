<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.fantasy</groupId>
    <artifactId>fantasy-framework</artifactId>
    <packaging>pom</packaging>
    <version>2.5.6.Alphal</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <asm-version>3.3</asm-version>
        <junit-version>4.9</junit-version>
        <cglib-version>2.2.2</cglib-version>
        <mysql-version>5.1.22</mysql-version>
        <jmagick-version>6.6.9</jmagick-version>
        <org.slf4j-version>1.5.8</org.slf4j-version>
        <servlet.api-version>2.5</servlet.api-version>
        <commons-net-version>3.3</commons-net-version>
        <htmlcleaner-version>2.8</htmlcleaner-version>
        <org.aspectj-version>1.8.2</org.aspectj-version>
        <org.mybatis-version>3.2.7</org.mybatis-version>
        <commons-codec-version>1.8</commons-codec-version>
        <commons-email-version>1.3.2</commons-email-version>
        <mybatis-spring-version>1.2.2</mybatis-spring-version>
        <net.sf.ehcache-version>2.5.0</net.sf.ehcache-version>
        <com.fantasy-version>2.5.6.Alphal</com.fantasy-version>
        <com.octo.captcha-version>1.0</com.octo.captcha-version>
        <org.apache.axis2-version>1.6.2</org.apache.axis2-version>
        <org.hibernate-version>4.3.5.Final</org.hibernate-version>
        <commons-beanutils-version>1.8.3</commons-beanutils-version>
        <commons-httpclient-version>3.1</commons-httpclient-version>
        <org.apache.struts-version>2.3.8</org.apache.struts-version>
        <org.apache.lucene-version>3.6.2</org.apache.lucene-version>
        <javax.servlet.api-version>3.1.0</javax.servlet.api-version>
        <eu.medsea.mimeutil-version>2.1.3</eu.medsea.mimeutil-version>
        <org.apache.santuario-version>1.4.6</org.apache.santuario-version>
        <org.quartz-scheduler-version>2.2.1</org.quartz-scheduler-version>
        <javax.servlet.jsp-api-version>2.3.1</javax.servlet.jsp-api-version>
        <org.codehaus.jackson-version>1.9.9</org.codehaus.jackson-version>
        <org.springframework-version>4.1.0.RELEASE</org.springframework-version>
        <com.thoughtworks.xstream-version>1.4.2</com.thoughtworks.xstream-version>
        <com.fasterxml.jackson.core-version>2.3.0</com.fasterxml.jackson.core-version>
        <org.springframework.security-version>3.2.5.RELEASE</org.springframework.security-version>
        <clover.licenseLocation>/Users/lmf/framework/clover.license</clover.licenseLocation>
    </properties>

    <distributionManagement>
        <repository>
            <id>nexus-releases</id>
            <name>local private nexus releases</name>
            <url>http://maven.jfantasy.org/content/repositories/releases/</url>
        </repository>
    </distributionManagement>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ftp</artifactId>
            </extension>
        </extensions>
        <directory>target</directory>
        <finalName>${project.artifactId}-${project.version}</finalName>
        <sourceDirectory>JavaSource</sourceDirectory>
        <resources>
            <resource>
                <directory>resources</directory>
            </resource>
            <resource>
                <directory>JavaSource</directory>
                <includes>
                    <include>**/*.ftl</include>
                    <include>**/*.xml</include>
                    <include>**/*.jpg</include>
                    <include>**/*.properties</include>
                </includes>
            </resource>
        </resources>
        <outputDirectory>target/classes</outputDirectory>
        <testSourceDirectory>test/src</testSourceDirectory>
        <testResources>
            <testResource>
                <directory>test/config</directory>
            </testResource>
        </testResources>
        <testOutputDirectory>target/test-classes</testOutputDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.9</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>JavaSource</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-jar</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>deploy</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>deploy</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.9.1</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <phase>deploy</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <executions>
                    <execution>
                        <id>deploy</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.sonar</groupId>
                <artifactId>sonar-maven-plugin</artifactId>
                <version>4.3</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4.2</version>
                <configuration>
                    <includes>
                        <include>**/*Test*.java</include>
                    </includes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>2.5.1</version>
                <executions>
                    <execution>
                        <phase>site</phase>
                        <goals>
                            <goal>cobertura</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <check>true</check>
                    <instrumentation>
                        <ignores>
                            <ignore>com.fantasy.**.web.*</ignore>
                            <ignore>com.fantasy.**.typeConverter.*</ignore>
                        </ignores>
                        <excludes>
                            <exclude>**/*Test.class</exclude>
                            <exclude>**/Test*.class</exclude>
                            <exclude>**/web/*.class</exclude>
                            <exclude>**/bean/typeConverter/*.class</exclude>
                        </excludes>
                    </instrumentation>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <reporting>
        <outputDirectory>target/site</outputDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jxr-plugin</artifactId>
                <version>2.4</version>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>2.5.1</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
                <version>2.9</version>
                <configuration>
                    <showSuccess>false</showSuccess>
                </configuration>
            </plugin>
        </plugins>
    </reporting>

    <modules>
        <module>core</module>
        <module>core-ws</module>
        <module>core-ws-server</module>
        <module>core-ws-client</module>
        <module>mall</module>
        <module>mall-ws</module>
        <module>mall-ws-server</module>
        <module>mall-ws-client</module>
        <module>cms</module>
        <module>cms-ws</module>
        <module>cms-ws-server</module>
        <module>cms-ws-client</module>
        <module>websocket</module>
        <module>weixin</module>
        <module>javaweb</module>
    </modules>

    <developers>
        <developer>
            <name>limaofeng</name>
            <email>limaofeng@msn.com</email>
        </developer>
    </developers>

</project>