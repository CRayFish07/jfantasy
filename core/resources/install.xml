<fantasy>

    <hibernate>
        <sessionFactory>
            <packagesToScan>
                <list>
                    <value>org.jfantasy.common.bean</value>
                    <value>org.jfantasy.attr.storage.bean</value>
                    <value>org.jfantasy.file.bean</value>
                    <value>org.jfantasy.security.bean</value>
                    <value>org.jfantasy.framework.dao.mybatis.keygen.bean</value>
                    <value>org.jfantasy.contacts.bean</value>
                    <value>org.jfantasy.system.bean</value>
                    <value>org.jfantasy.member.bean</value>
                    <value>org.jfantasy.payment.bean</value>
                    <value>org.jfantasy.swp.bean</value>
                    <value>org.jfantasy.sms.bean</value>
                </list>
            </packagesToScan>
        </sessionFactory>
    </hibernate>

    <mybatis>
        <sqlSessionFactoryBean>
            <plugins>

            </plugins>
            <typeAliasesPackage>org.jfantasy.framework;org.jfantasy.website;</typeAliasesPackage>
            <mapperLocations>
                <list>
                    <value>classpath:org/jfantasy/framework/**/*-Mapper.xml</value>
                    <value>classpath:org/jfantasy/website/**/*-Mapper.xml</value>
                </list>
            </mapperLocations>
        </sqlSessionFactoryBean>
        <mapperScannerConfigurer>
            <basePackage>org.jfantasy.framework;org.jfantasy.website;</basePackage>
        </mapperScannerConfigurer>
    </mybatis>

</fantasy>