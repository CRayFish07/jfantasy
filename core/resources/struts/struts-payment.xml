<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <package name="root-payment" extends="fantasy-default" namespace="/">
        <!-- 支付信息查看 -->
        <action name="payment" class="com.fantasy.payment.web.PaymentAction">
            <result type="freemarker">/template/payment/pay_info.ftl</result>
        </action>
    </package>
    <package name="payment" extends="fantasy-default" namespace="/payment">
        <!-- 提交支付地址 -->
        <action name="submit" class="com.fantasy.payment.web.PaymentAction" method="submit">
            <result type="freemarker">/template/payment/submit.ftl</result>
        </action>
        <!-- 同步通知回调地址 -->
        <action name="payreturn" class="com.fantasy.payment.web.PaymentAction" method="payreturn">
            <result name="result" type="redirectAction">
                <param name="namespace">/payment</param>
                <param name="actionName">result</param>
                <param name="sn">${sn}</param>
            </result>
        </action>
        <!-- 支付通知回调地址 -->
        <action name="paynotify" class="com.fantasy.payment.web.PaymentAction" method="paynotify"/>
        <!-- 支付完成跳转地址 -->
        <action name="result" class="com.fantasy.payment.web.PaymentAction">
            <result type="freemarker">/template/payment/result.ftl</result>
        </action>
    </package>

    <!-- 支付方式配置 -->
    <package name="payment-config" extends="fantasy-default" namespace="/system/payconfig">
        <!-- 首页 -->
        <action name="index" class="com.fantasy.payment.web.PaymentConfigAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/payment/payment_config.ftl</result>
        </action>
        <!-- 搜索 -->
        <action name="search" class="com.fantasy.payment.web.PaymentConfigAction" method="search"/>
        <!-- 添加 -->
        <action name="add" class="com.fantasy.payment.web.PaymentConfigAction">
            <result type="freemarker">/template/%{pageTheme}/payment/payment_config_add.ftl</result>
        </action>
        <!-- 保存 -->
        <action name="save" class="com.fantasy.payment.web.PaymentConfigAction" method="save"/>
        <!-- 修改 -->
        <action name="edit" class="com.fantasy.payment.web.PaymentConfigAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/payment/payment_config_edit.ftl</result>
        </action>
        <!-- 显示 -->
        <action name="view" class="com.fantasy.payment.web.PaymentConfigAction" method="view">
            <result type="freemarker">/template/%{pageTheme}/payment/payment_config_view.ftl</result>
        </action>
        <!-- 删除 -->
        <action name="delete" class="com.fantasy.payment.web.PaymentConfigAction" method="delete"/>
        <!-- 支付测试 -->
        <action name="test" class="com.fantasy.payment.web.PaymentConfigAction" method="test">
            <result type="freemarker">/template/%{pageTheme}/payment/payment_test.ftl</result>
        </action>
    </package>

</struts>