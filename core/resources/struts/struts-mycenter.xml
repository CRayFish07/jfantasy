<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <!-- 个人中心 -->
    <package name="fides-mycenter" extends="fantasy-default" namespace="/mycenter">

        <!--个人资料-->
        <action name="information" class="com.fantasy.security.web.UserAction" method="profile">
            <result type="freemarker">/template/%{pageTheme}/mycenter/information.ftl</result>
        </action>

        <!--个人资料保存-->
        <action name="information_save" class="com.fantasy.security.web.UserAction" method="save"/>



    </package>

    <!-- 首页找回密码-->
    <package name="fides-retrievePassword" extends="fantasy-default" namespace="/findpwd">
        <action name="retrievePassword" class="com.fantasy.security.web.UserCenterAction" method="retrievePassword"/>
    </package>
</struts>