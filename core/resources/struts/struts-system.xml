<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN" "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>

    <!-- 任务调度管理 -->
    <package name="fides-schedule" extends="fantasy-default" namespace="/system/schedule">
        <action name="index" class="com.fantasy.schedule.web.ScheduleAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/schedule.ftl</result>
        </action>
    </package>
    <!-- 数据字典 -->
    <package name="fides-system-dd" extends="fantasy-default" namespace="/system/dd">
        <action name="index" class="com.fantasy.system.web.DataDictionaryAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/data_dictionary.ftl</result>
        </action>
        <!-- 异步查询方法 -->
        <action name="search" class="com.fantasy.system.web.DataDictionaryAction" method="search"/>
        <!-- 新增数据字典项 -->
        <action name="save" class="com.fantasy.system.web.DataDictionaryAction" method="save"/>
        <!-- 修改数据字典项 -->
        <action name="update" class="com.fantasy.system.web.DataDictionaryAction" method="save"/>
        <!-- 删除数据字典项 -->
        <action name="delete" class="com.fantasy.system.web.DataDictionaryAction" method="delete"/>
    </package>
    <package name="admin-system-ddt" extends="fantasy-default"  namespace="/system/ddt">
        <!-- 添加与保存数据字典分类 -->
        <action name="save" class="com.fantasy.system.web.DataDictionaryAction" method="saveType"/>
        <!-- 删除数据字典分类 -->
        <action name="delete" class="com.fantasy.system.web.DataDictionaryAction" method="deletetType"/>
    </package>
    <!-- 网站维护 -->
    <package name="system-website" extends="fantasy-default" namespace="/system/website">
        <action name="index" class="com.fantasy.system.web.WebsiteAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/website.ftl</result>
        </action>
        <action name="search" class="com.fantasy.system.web.WebsiteAction" method="search"/>
        <action name="add" class="com.fantasy.system.web.WebsiteAction">
            <result type="freemarker">/template/%{pageTheme}/system/website_add.ftl</result>
        </action>
        <action name="save" class="com.fantasy.system.web.WebsiteAction" method="save"/>
        <action name="edit" class="com.fantasy.system.web.WebsiteAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/system/website_edit.ftl</result>
        </action>
        <action name="delete" class="com.fantasy.system.web.WebsiteAction" method="delete"/>
    </package>
    <package name="system-website-setting" extends="fantasy-default" namespace="/system/website/setting">
        <!-- setting设置 -->
        <action name="index" class="com.fantasy.system.web.SettingAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/setting.ftl</result>
        </action>
        <action name="search" class="com.fantasy.system.web.SettingAction" method="search"/>
        <action name="add" class="com.fantasy.system.web.SettingAction" method="add">
            <result type="freemarker">/template/%{pageTheme}/system/setting_add.ftl</result>
        </action>
        <action name="save" class="com.fantasy.system.web.SettingAction" method="save"/>
        <action name="edit" class="com.fantasy.system.web.SettingAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/system/setting_edit.ftl</result>
        </action>
        <action name="delete" class="com.fantasy.system.web.SettingAction" method="delete"/>
    </package>
    <!-- 地区维护 -->
    <package name="fides-area" extends="fantasy-default" namespace="/system/area">
        <!-- 地区维护首页 -->
        <action name="index" class="com.fantasy.common.web.AreaAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/area_index.ftl</result>
        </action>
        <!-- 地区查询 -->
        <action name="search" class="com.fantasy.common.web.AreaAction" method="search"/>
        <!-- 添加地区 -->
        <action name="add" class="com.fantasy.common.web.AreaAction">
            <result type="freemarker">/template/%{pageTheme}/system/area_add.ftl</result>
        </action>
        <!-- 修改地区 -->
        <action name="edit" class="com.fantasy.common.web.AreaAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/system/area_edit.ftl</result>
        </action>
        <!-- 保存地区 -->
        <action name="save" class="com.fantasy.common.web.AreaAction" method="save"/>
        <!-- 删除地区 -->
        <action name="delete" class="com.fantasy.common.web.AreaAction" method="delete"/>
        <!-- ajax异步加载地区 -->
        <action name="list" class="com.fantasy.common.web.AreaAction" method="list"/>
    </package>

    <package name="fides_filemanager" extends="fantasy-default" namespace="/system/filemanager">
        <!-- 文件管理首页 -->
        <action name="index" class="com.fantasy.file.web.FileManagerAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/file_filemanager.ftl</result>
        </action>
        <!-- 文件管理search -->
        <action name="search" class="com.fantasy.file.web.FileManagerAction" method="search"/>
        <!-- 文件管理添加 -->
        <action name="add" class="com.fantasy.file.web.FileManagerAction">
            <result type="freemarker">/template/%{pageTheme}/system/file_filemanager_add.ftl</result>
        </action>
        <!-- 文件管理保存 -->
        <action name="save" class="com.fantasy.file.web.FileManagerAction" method="save"/>
        <!-- 文件管理修改 -->
        <action name="edit" class="com.fantasy.file.web.FileManagerAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/system/file_filemanager_edit.ftl</result>
        </action>
        <!-- 文件管理查看 -->
        <action name="view" class="com.fantasy.file.web.FileManagerAction" method="view">
            <result type="freemarker">/template/%{pageTheme}/system/file_filemanager_view.ftl</result>
        </action>
        <!-- 文件管理删除 -->
        <action name="delete" class="com.fantasy.file.web.FileManagerAction" method="delete"/>
    </package>

    <!-- 文件目录配置-->
    <package name="fides_filepath" extends="fantasy-default" namespace="/system/filepath">
        <action name="index" class="com.fantasy.file.web.DirectoryAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/file_directory.ftl</result>
        </action>

        <action name="add" class="com.fantasy.file.web.DirectoryAction">
            <result type="freemarker">/template/%{pageTheme}/system/file_directory_add.ftl</result>
        </action>

        <action name="edit" class="com.fantasy.file.web.DirectoryAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/system/file_directory_edit.ftl</result>
        </action>

        <action name="search" class="com.fantasy.file.web.DirectoryAction" method="search"/>

        <action name="save" class="com.fantasy.file.web.DirectoryAction" method="save"/>

        <action name="delete" class="com.fantasy.file.web.DirectoryAction" method="delete"/>
    </package>

    <package name="fides_tools" extends="fantasy-default" namespace="/system/tools">
        <action name="plsql" class="com.fantasy.framework.struts2.ActionSupport">
            <result type="freemarker">/template/%{pageTheme}/tools/plsql.ftl</result>
        </action>
    </package>

    <!--FTP站点配置 -->
    <package name="fides-ftp" extends="fantasy-default" namespace="/system/ftp">
        <action name="index" class="com.fantasy.file.web.FtpConfigAction" method="queryList">
            <result type="freemarker">/template/%{pageTheme}/system/file_ftp.ftl</result>
        </action>

        <action name="search" class="com.fantasy.file.web.FtpConfigAction" method="search"/>

        <action name="add" class="com.fantasy.framework.struts2.ActionSupport">
            <result type="freemarker">/template/%{pageTheme}/system/file_ftp_add.ftl</result>
        </action>

        <action name="edit" class="com.fantasy.file.web.FtpConfigAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/system/file_ftp_edit.ftl</result>
        </action>

        <action name="view" class="com.fantasy.file.web.FtpConfigAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/system/file_ftp_view.ftl</result>
        </action>

        <action name="save" class="com.fantasy.file.web.FtpConfigAction" method="save"/>

        <action name="delete" class="com.fantasy.file.web.FtpConfigAction" method="delete"/>
    </package>


    <!--JDBC配置 -->
    <package name="fides-jdbc" extends="fantasy-default" namespace="/system/jdbc">
        <action name="index" class="com.fantasy.common.web.JdbcConfigAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/jdbc.ftl</result>
        </action>

        <action name="search" class="com.fantasy.common.web.JdbcConfigAction" method="search"/>

        <action name="edit" class="com.fantasy.common.web.JdbcConfigAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/system/jdbc_edit.ftl</result>
        </action>

        <action name="save" class="com.fantasy.common.web.JdbcConfigAction" method="save"/>

        <action name="test" class="com.fantasy.common.web.JdbcConfigAction" method="test"/>
        
        <action name="delete" class="com.fantasy.common.web.JdbcConfigAction" method="delete"/>
    </package>

    <package name="fides-captcha-config" extends="fantasy-default" namespace="/system/captchaConfig">
        <action name="index" class="com.fantasy.sms.web.CaptchaConfigAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/captcha/xml.ftl</result>
        </action>
        <action name="search" class="com.fantasy.sms.web.CaptchaConfigAction" method="search"/>
        <action name="save" class="com.fantasy.sms.web.CaptchaConfigAction" method="save"/>
        <action name="delete" class="com.fantasy.sms.web.CaptchaConfigAction" method="delete"/>

        <!-- 验证码日志 -->
        <action name="captcha_log" class="com.fantasy.sms.web.CaptchaConfigAction" method="captchaLog">
            <result type="freemarker">/template/%{pageTheme}/system/captcha/captchaLog.ftl</result>
        </action>
        <action name="captcha_log_search" class="com.fantasy.sms.web.CaptchaConfigAction" method="captchaLogSearch"/>
        <!-- 消息发送日志 -->
        <action name="message_log" class="com.fantasy.sms.web.CaptchaConfigAction" method="messageLog">
            <result type="freemarker">/template/%{pageTheme}/system/captcha/messageLog.ftl</result>
        </action>
        <action name="message_log_search" class="com.fantasy.sms.web.CaptchaConfigAction" method="messageLogSearch"/>
    </package>
</struts>