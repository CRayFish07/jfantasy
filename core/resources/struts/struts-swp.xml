<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN" "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>


    <!-- 网页静态化管理 -->
    <package name="admin-swp" extends="fantasy-default" namespace="/swp">
        <!-- 首页 -->
        <action name="page">
            <result type="chain">
                <param name="namespace">/admin/swp/page</param>
                <param name="actionName">index</param>
            </result>
        </action>
        <!-- 下一步(选择模板) -->
        <action name="next" class="com.fantasy.swp.web.PageAction" method="next">
            <result type="freemarker">/template/swp/template.ftl</result>
        </action>
        <!-- 模板搜索页 -->
        <action name="template-search" class="com.fantasy.swp.web.PageAction" method="templateSearch"/>
        <action name="template-add">
            <result type="freemarker">/template%{pageTheme}/swp/template_add.ftl</result>
        </action>
        <!-- 保存 -->
        <action name="template-save" class="com.fantasy.swp.web.PageAction" method="templateSave">
            <interceptor-ref name="fileUpload">
                <param name="allowedTypes">image/bmp,image/png,image/gif,image/jpeg</param>
                <param name="maximumSize">3</param>
            </interceptor-ref>
            <!-- 默认拦截器必须放在fileUpload之后，否则无效 -->
            <interceptor-ref name="defaultStack"/>
        </action>
        <!-- 修改 -->
        <action name="template-edit" class="com.fantasy.swp.web.PageAction" method="templateEdit">
            <result type="freemarker">/template%{pageTheme}/swp/template_edit.ftl</result>
        </action>
        <!-- 删除 -->
        <action name="template-delete" class="com.fantasy.swp.web.PageAction" method="templateDelete"/>
    </package>

    <!-- page 模板 -->
    <package name="admin-swp-page" extends="fantasy-default" namespace="/swp/page">
        <!--page 首页 -->
        <action name="index" class="com.fantasy.swp.web.PageAction" method="index">
            <result type="freemarker">/template%{pageTheme}/swp/page.ftl</result>
        </action>
        <!--page 搜索 -->
        <action name="search" class="com.fantasy.swp.web.PageAction" method="search"/>
        <!--page 添加 -->
        <action name="add">
            <result type="freemarker">/template%{pageTheme}/swp/page_add.ftl</result>
        </action>
        <!--page 保存 -->
        <action name="save" class="com.fantasy.swp.web.PageAction" method="save"/>
        <!--page 修改 -->
        <action name="edit" class="com.fantasy.swp.web.PageAction" method="edit">
            <result type="freemarker">/template%{pageTheme}/swp/page_edit.ftl</result>
        </action>
        <!-- 查看 -->
        <action name="view" class="com.fantasy.swp.web.PageAction" method="edit">
            <result type="freemarker">/template%{pageTheme}/swp/page_view.ftl</result>
        </action>
        <!--page 删除 -->
        <action name="delete" class="com.fantasy.swp.web.PageAction" method="delete"/>
        <!--page 的data首页 -->
        <action name="data-index" class="com.fantasy.swp.web.DataAction" method="index">
            <result type="freemarker">/template%{pageTheme}/swp/data.ftl</result>
        </action>
        <!--page 的data搜索页 -->
        <action name="data-search" class="com.fantasy.swp.web.DataAction" method="search"/>
        <!--page 的data添加页 -->
        <action name="data-add">
            <result type="freemarker">/template%{pageTheme}/swp/data_add.ftl</result>
        </action>
        <!--page 的data 保存 -->
        <action name="data-save" class="com.fantasy.swp.web.DataAction" method="save"/>
        <!--page 的data 修改页 -->
        <action name="data-edit" class="com.fantasy.swp.web.DataAction" method="edit">
            <result type="freemarker">/template%{pageTheme}/swp/data_edit.ftl</result>
        </action>
        <!--page 的data查看页 -->
        <action name="data-view" class="com.fantasy.swp.web.DataAction" method="edit">
            <result type="freemarker">/template%{pageTheme}/swp/data_view.ftl</result>
        </action>
        <!--page 的data 删除 -->
        <action name="data-delete" class="com.fantasy.swp.web.DataAction" method="delete"/>

        <!-- 模板数据首页 -->
        <action name="face-index" class="com.fantasy.swp.web.DataInferfaceAction" method="index">
            <result type="freemarker">/template%{pageTheme}/swp/dataInferface.ftl</result>
        </action>
        <!-- 数据接口搜索页 -->
        <action name="face-search" class="com.fantasy.swp.web.DataInferfaceAction" method="search"/>
        <!-- 数据接口添加页面 -->
        <action name="face-add">
            <result type="freemarker">/template%{pageTheme}/swp/dataInferface_add.ftl</result>
        </action>
        <!-- 数据接口保存 -->
        <action name="face-save" class="com.fantasy.swp.web.DataInferfaceAction" method="save"/>
        <!-- 数据接口修改 -->
        <action name="face-edit" class="com.fantasy.swp.web.DataInferfaceAction" method="edit">
            <result type="freemarker">/template%{pageTheme}/swp/dataInferface_edit.ftl</result>
        </action>
        <!-- 数据接口查看 -->
        <action name="face-view" class="com.fantasy.swp.web.DataInferfaceAction" method="edit">
            <result type="freemarker">/template%{pageTheme}/swp/dataInferface_view.ftl</result>
        </action>
        <!-- 数据接口删除 -->
        <action name="face-delete" class="com.fantasy.swp.web.DataInferfaceAction" method="delete"/>
        <!-- 生成页面 -->
        <action name="create" class="com.fantasy.swp.web.PageAction" method="create"/>
    </package>

    <!-- page 模板 -->
    <package name="admin-swp-template" extends="fantasy-default" namespace="/swp/template">
        <!--模板 首页 -->
        <action name="index" class="com.fantasy.swp.web.TemplateAction" method="index">
            <result type="freemarker">/template%{pageTheme}/swp/template.ftl</result>
        </action>
        <!-- 模板搜索页面 -->
        <action name="search" class="com.fantasy.swp.web.TemplateAction" method="search"/>
        <!-- 模板添加页面 -->
        <action name="add">
            <result type="freemarker">/template%{pageTheme}/swp/template_add.ftl</result>
        </action>
        <!-- 模板保存页面 -->
        <action name="save" class="com.fantasy.swp.web.TemplateAction" method="save"/>
        <!-- 模板修改页面 -->
        <action name="edit" class="com.fantasy.swp.web.TemplateAction" method="edit">
            <result type="freemarker">/template%{pageTheme}/swp/template_edit.ftl</result>
        </action>
        <!-- 模板查看页面 -->
        <action name="view" class="com.fantasy.swp.web.TemplateAction" method="edit">
            <result type="freemarker">/template%{pageTheme}/swp/template_view.ftl</result>
        </action>
        <!-- 模板删除 -->
        <action name="delete" class="com.fantasy.swp.web.TemplateAction" method="delete"/>
    </package>

    <package name="admin-trigger" extends="fantasy-default" namespace="/swp/trigger">
        <action name="index" class="com.fantasy.swp.web.TriggerAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/trigger/trigger.ftl</result>
        </action>

        <action name="search" class="com.fantasy.swp.web.TriggerAction" method="search"/>

        <action name="edit" class="com.fantasy.swp.web.TriggerAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/trigger/trigger_edit.ftl</result>
        </action>

        <action name="add" class="com.fantasy.framework.struts2.ActionSupport">
            <result type="freemarker">/template/%{pageTheme}/trigger/trigger_add.ftl</result>
        </action>

        <action name="view" class="com.fantasy.swp.web.TriggerAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/trigger/trigger_view.ftl</result>
        </action>

        <action name="save" class="com.fantasy.swp.web.TriggerAction" method="save"/>

        <action name="delete" class="com.fantasy.swp.web.TriggerAction" method="delete"/>
    </package>


</struts>