<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>

    <!-- 任务调度管理 -->
    <package name="task-schedule" extends="fantasy-default" namespace="/system/schedule">
        <!-- 首页 -->
        <action name="index" class="com.fantasy.schedule.web.ScheduleAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/system/schedule.ftl</result>
        </action>

        <!-- 搜索 -->
        <action name="search" class="com.fantasy.schedule.web.ScheduleAction" method="search" />


        <!-- 添加页面 -->
        <action name="add" class="com.fantasy.schedule.web.ScheduleAction">
            <result type="freemarker">/template/%{pageTheme}/system/schedule_add.ftl</result>
        </action>

        <!-- 保存 -->
        <action name="add_save" class="com.fantasy.schedule.web.ScheduleAction" method="addSave" />

        <!-- 修改 -->
        <action name="edit" class="com.fantasy.schedule.web.ScheduleAction" method="edit" >
            <result type="freemarker">/template/%{pageTheme}/system/schedule_edit.ftl</result>
        </action>

        <!-- 修改保存 -->
        <action name="edit_save" class="com.fantasy.schedule.web.ScheduleAction" method="editSave" />

        <!-- 暂停 -->
        <action name="pauseJob" class="com.fantasy.schedule.web.ScheduleAction" method="pauseJob" />

        <!-- 执行 -->
        <action name="resumeJob" class="com.fantasy.schedule.web.ScheduleAction" method="resumeJob" />

        <!-- 删除 -->
        <action name="delete" class="com.fantasy.schedule.web.ScheduleAction" method="deleteJob" />


    </package>
</struts>