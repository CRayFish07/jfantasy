<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN" "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>

    <!--********************************************************************** -->
    <!--*                                                                    * -->
    <!--*                               权限用户管理                          * -->
    <!--*                                                                    * -->
    <!--********************************************************************** -->
    <package name="admin-security" extends="fantasy-default" namespace="/security">

        <!-- 用户管理 -->
        <action name="user">
            <result type="chain">
                <param name="namespace">/security/user</param>
                <param name="actionName">index</param>
            </result>
        </action>

        <!-- 角色管理 -->
        <action name="role">
            <result type="chain">
                <param name="namespace">/security/role</param>
                <param name="actionName">index</param>
            </result>
        </action>

        <!-- 菜单管理 -->
        <action name="menu">
            <result type="chain">
                <param name="namespace">/security/menu</param>
                <param name="actionName">index</param>
            </result>
        </action>

        <!-- 资源管理 -->
        <action name="resource">
            <result type="chain">
                <param name="namespace">/security/resource</param>
                <param name="actionName">index</param>
            </result>
        </action>

    </package>

    <!-- 用户管理 -->
    <package name="admin-security-user" extends="fantasy-default" namespace="/security/user">
        <action name="index" class="com.fantasy.security.web.UserAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/security/user.ftl</result>
        </action>
        <action name="search" class="com.fantasy.security.web.UserAction" method="search"/>
        <action name="add" class="com.fantasy.security.web.UserAction">
            <result type="freemarker">/template/%{pageTheme}/security/user_add.ftl</result>
        </action>
        <action name="edit" class="com.fantasy.security.web.UserAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/security/user_edit.ftl</result>
        </action>
        <action name="save" class="com.fantasy.security.web.UserAction" method="save"/>
        <action name="resetpwd" class="com.fantasy.security.web.UserAction" method="resetpwd"/>
        <action name="delete" class="com.fantasy.security.web.UserAction" method="delete"/>
    </package>

    <package name="fides-usercenter" extends="fantasy-default" namespace="/usercenter">
        <action name="contacts">
            <result type="chain">
                <param name="namespace">/usercenter/contacts</param>
                <param name="actionName">index</param>
            </result>
        </action>
    </package>

    <package name="fides-usercenter-contacts" extends="fantasy-default" namespace="/usercenter/contacts">
        <action name="index" class="com.fantasy.contacts.web.ContactsAction" method="index">
        </action>
    </package>

    <!-- 菜单管理 -->
    <package name="admin-security-menu" extends="fantasy-default" namespace="/security/menu">
        <action name="index" class="com.fantasy.security.web.MenuAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/security/menu.ftl</result>
        </action>
        <action name="save" class="com.fantasy.security.web.MenuAction" method="save"/>
        <action name="delete" class="com.fantasy.security.web.MenuAction" method="delete"/>
    </package>

    <!-- 角色管理 -->
    <package name="admin-security-role" extends="fantasy-default" namespace="/security/role">
        <action name="index" class="com.fantasy.security.web.RoleAction" method="index">
            <result type="freemarker">/template/%{pageTheme}/security/role.ftl</result>
        </action>
        <action name="add" class="com.fantasy.security.web.RoleAction">
            <result type="freemarker">/template/%{pageTheme}/security/role_add.ftl</result>
        </action>
        <action name="save" class="com.fantasy.security.web.RoleAction" method="save"/>
        <action name="edit" class="com.fantasy.security.web.RoleAction" method="edit">
            <result type="freemarker">/template/%{pageTheme}/security/role_edit.ftl</result>
        </action>
        <action name="delete" class="com.fantasy.security.web.RoleAction" method="delete"/>
    </package>

    <!-- 资源管理 -->
    <package name="resource" extends="fantasy-default" namespace="/admin/security/resource">
        <action name="index" class="com.fantasy.security.web.ResourceAction" method="index">
            <result type="freemarker">/template/admin/security/resource.ftl</result>
        </action>
        <action name="search" class="com.fantasy.security.web.ResourceAction" method="search"/>
        <action name="add">
            <result type="freemarker">/template/admin/security/resource_add.ftl</result>
        </action>
        <action name="save" class="com.fantasy.security.web.ResourceAction" method="save"/>
        <action name="edit" class="com.fantasy.security.web.ResourceAction" method="edit">
            <result type="freemarker">/template/admin/security/resource_edit.ftl</result>
        </action>
        <action name="delete" class="com.fantasy.security.web.ResourceAction" method="delete"/>
    </package>
</struts>